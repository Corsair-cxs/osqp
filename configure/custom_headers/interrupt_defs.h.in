#ifndef INTERRUPT_DEFS_H_
#define INTERRUPT_DEFS_H_

/* Header file defining interrupt functions */

/* Interrupts */
#cmakedefine OSQP_CUSTOM_INTERRUPTS

#ifdef OSQP_CUSTOM_INTERRUPTS
/* Use user-provided interrupt functions */
# include "@OSQP_CUSTOM_INTERRUPTS@"

#else
/* If no custom handler, then use the ones in interrupts.c */

/**
 * Start listener for ctrl-c interrupts
 */
void osqp_start_interrupt_listener(void);

/**
 * End listener for ctrl-c interrupts
 */
void osqp_end_interrupt_listener(void);

/**
 * Check if the solver has been interrupted
 * @return  Boolean indicating if the solver has been interrupted
 */
int osqp_is_interrupted(void);

#endif


#endif /* ifndef INTERRUPT_DEFS_H_ */
